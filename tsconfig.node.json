{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": false,
    "outDir": "./dist-electron",
    "types": ["node"]
  },
  "include": ["vite.config.ts", "electron/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "dist-electron"]
}

